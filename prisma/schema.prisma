generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URI")
}

model User {
  id           String            @id @default(uuid()) @db.Uuid
  name         String            @db.VarChar(255)
  email        String            @unique @db.VarChar(255)
  password     String
  role         Role
  ideas        Idea[]
  comments     Comment[]
  isBanned     Boolean           @default(false)
  interactions IdeaInteraction[]
  departmentId String?           @db.Uuid
  department   Department?       @relation(fields: [departmentId], references: [id])
}

enum Role {
  Staff
  Admin
  QA_Manager
  QA_Coordinator
}

model Idea {
  id         String              @id @default(uuid()) @db.Uuid
  title      String              @db.VarChar(255)
  createdAt  DateTime            @default(now()) @db.Timestamp(6)
  content    String
  authorId   String              @db.Uuid
  author     User                @relation(fields: [authorId], references: [id])
  comments   Comment[]
  categories CategoriesOnIdeas[]
  file       String?
  thumbsUp   Int                 @default(0)
  thumbsDown Int                 @default(0)
  users      IdeaInteraction[]
}

model Comment {
  id        String   @id @default(uuid()) @db.Uuid
  text      String
  createdAt DateTime @default(now()) @db.Timestamp(6)
  ideaId    String   @db.Uuid
  idea      Idea     @relation(fields: [ideaId], references: [id])
  authorId  String   @db.Uuid
  author    User     @relation(fields: [authorId], references: [id])
}

model Category {
  id    String              @id @default(uuid()) @db.Uuid
  name  String
  ideas CategoriesOnIdeas[]
}

model CategoriesOnIdeas {
  idea       Idea     @relation(fields: [ideaId], references: [id])
  ideaId     String   @db.Uuid
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String   @db.Uuid

  @@id([ideaId, categoryId])
}

model IdeaInteraction {
  user   User        @relation(fields: [userId], references: [id])
  userId String      @db.Uuid
  idea   Idea        @relation(fields: [ideaId], references: [id])
  ideaId String      @db.Uuid
  type   Interaction

  @@id([userId, ideaId])
}

enum Interaction {
  ThumbsUp
  ThumbsDown
}

model ClosureDate {
  id                 String   @id @default(uuid()) @db.Uuid
  initialClosureDate DateTime
  finalClosureDate   DateTime
}

model Department {
  id    String @id @default(uuid()) @db.Uuid
  name  String
  users User[]
}
